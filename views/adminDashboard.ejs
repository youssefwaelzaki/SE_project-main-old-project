<html>
<head>
  <title>Dashboard</title>
  <link rel="stylesheet" href="/styles/bootstrap.min.css">
  <link rel="stylesheet" href="/styles/style.css">
  <style>
    .container {
      margin-top: 50px;
      text-align: center;
    }

    .container h2 {
      margin-bottom: 20px;
      font-size: 30px;
      font-weight: bold;
      color: #333;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .navbar {
      padding-left: 0;
    }

    .navbar-nav {
      display: flex;
      justify-content: flex-start;
    }
  </style>
  <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
  <script src="/js/bootstrap.min.js" type="text/javascript"></script>
  <script>
    $(document).ready(function() {
      const sessionToken = document.cookie.includes("session_token");
      if (!sessionToken) {
        location.href = "/";
      }
    });
  </script>
</head>
<body>
  <div>
    <div>
      <nav class="navbar navbar-inverse">
        <ul class="nav navbar-nav">
          <li class="active"><a href="/dashboard">Home</a></li>
          <li><a href="/manage/stations">Stations</a></li>
          <li><a href="/manage/stations/create">Create Station</a></li>
          <li><a href="/manage/stations/edit/:stationId">Update Station</a></li>
          <li><a href="/manage/routes">Routes</a></li>
          <li><a href="/manage/routes/create">Create Route</a></li>
          <li><a href="/users">Users</a></li>
          <li><a href="/users/add">Add Users</a></li>
          <li><a href="/">Logout</a></li>
        </ul>
      </nav>
    </div>
    <div class="container">
      <h2>Welcome admin, you are logged in!</h2>
    </div>
  </div>
