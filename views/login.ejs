<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <link rel="stylesheet" href="/styles/bootstrap.min.css">
  <link rel="stylesheet" href="/styles/style.css">
  <style>
    .header {
      background-color: black;
      padding: 20px;
      color: white;
    }

    .header a {
      color: white;
      text-decoration: none;
      margin-right: 10px;
    }

    .header a:hover {
      text-decoration: underline;
    }

    .container {
      margin-top: 50px;
      text-align: center;
    }

    .container h1 {
      margin-bottom: 20px;
    }

    .container .form-container {
      width: 50%;
      margin: 0 auto;
    }

    .container .form-group {
      text-align: left;
    }

    .container .form-group label {
      font-weight: bold;
    }

    .container .form-group input[type="email"],
    .container .form-group input[type="password"] {
      width: 100%;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
    }

    .container .form-group button {
      margin-top: 10px;
    }
  </style>
  <script src="/js/jquery-2.2.0.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
</head>
<body>
  <div class="header">
    <a href="/">Home</a>
  </div>

  <div class="container">
    <h1>Login</h1>
    <div class="form-container">
      <form id="loginForm" action="/login" method="POST">
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" id="email" name="email" placeholder="Enter your email" required>
        </div>
        <div class="form-group">
          <label for="password">Password:</label>
          <input type="password" id="password" name="password" placeholder="Enter your password" required>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Login</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    $(document).ready(function() {
      // Add any JavaScript code here for form submission, validation, etc.
      $('#loginForm').submit(function(event){
        event.preventDefault();

        // Gather form data
        var formData = {
            username: $('#email').val(),
            password: $('#password').val()
            // Add more fields if needed
        };

        // Call the login function from api.js
        login(formData);
    });
    });
  </script>
</body>
</html>
